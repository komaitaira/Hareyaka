<!DOCTYPE html>
<html>
  <head>
    <title>Hareyaka</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/f9d805bcc9.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <div class="wrapper">
    <%# ヘッダー %>
    <%= render 'layouts/header' %>

    <%# body %>
    <div class="body">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <p id="notice"><%= notice %></p>
          </div>
        </div>
      </div>
      <%= yield %>
    </div>

    <%# フッター %>
    <%= render 'layouts/footer' %>
    </div>
  </body>
</html>