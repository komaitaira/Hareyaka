<div class="row">
  <div class="col-sm-12">
    <%= attachment_image_tag @company, :background_image, class: "company-header", fallback: "background-noimage.jpg" %>
    <h4 class="text-center"><%= @company.company_name %></h4>
    <hr class="titleHr">
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="recommend">
      <h5>この企業のおすすめ記事3選</h5>
      <%= render 'public/articles/article_list', articles: @company_ranks %>
    </div>
  </div>

  <div class="col-sm-6">
    <h5>企業情報</h5>
    <hr class="titleHr">
    <table class='table table-borderless table-sm'>
      <tr>
        <th>郵便番号</th>
        <td><%= @company.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @company.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @company.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @company.email %></td>
      </tr>
    </table>

    <h5>企業紹介</h5>
    <hr class="titleHr">
    <p><%= @company.introduction %></p>
    <hr class="titleHr">
    <span id="follow_button_<%= @company.id %>">
      <%= render 'public/shared/follow_button', company: @company %>
    </span>
    <%# チャットボタン表示 %>
    <% if @isRoom == true %>
      <a href="/rooms/<%= @roomId %>" class="btn enter-dm">DMへ進む</a>
    <% else %>
      <%= form_for @room do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :company_id, value: @company.id %>
        <%= f.submit "DMを始める", class: "btn enter-dm"%>
      <% end %>
    <% end %>
  </div>
</div>
