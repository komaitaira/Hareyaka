<div class="row">
  <div class="col-xs-12">
    <%= attachment_image_tag @company, :background_image, size: '1135x200', fallback: "no_image.png" %>
    <h3 class="text-center"><%= @company.company_name %></h3>
    <hr class="titleHr">
  </div>
</div>

<div class="row">
  <div class="col-xs-6">
    <h4>企業情報</h4>
    <table class='table'>
      <tr>
        <th>郵便番号</th>
        <td><%= @company.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @company.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @company.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @company.email %></td>
      </tr>
    </table>
    <div class="recommend">
      <h4>この企業のおすすめ記事</h4>
    </div>
  </div>

  <div class="col-xs-6">
    <h4>企業紹介</h4>
    <hr class="titleHr">
    <p><%= @company.introduction %></p>
    <hr class="titleHr">
    <span id="follow_button_<%= @company.id %>">
      <%= render 'public/shared/follow_button', company: @company %>
    </span>
    <%# チャットボタン表示 %>
    <% if @company.followed_by?(current_user)  %>
      <% if @isRoom == true %>
        <p class="company-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary">チャットへ</a>
      <% else %>
        <%= form_for @room do |f| %>
          <%= fields_for @cu_entry do |cu| %>
            <%= cu.hidden_field :user_id, value: current_user.id %>
          <% end %>
          <%= fields_for @c_entry do |c| %>
            <%= c.hidden_field :company_id, value: @company.id %>
          <% end %>
          <%= f.submit "チャットを始める", class:"btn btn-primary user-show-chat"%>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
