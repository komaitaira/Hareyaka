<div class="container">
  <div class="row">
    <div class="col-md-12">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <%= link_to "会員登録情報", user_path(current_user), class: "nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "お気に入り(全#{current_user.favorites.count}件)", favorites_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "フォロー企業(全#{current_user.followings.count}件)", follows_user_path(current_user), class: "nav-link" %>
        </li>
      </ul>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="offset-sm-4 col-sm-4 offset-md-5 col-md-5" style="margin-bottom: 20px;">
      <%= attachment_image_tag @user, :profile_image, class: "img-fluid my-image", fallback: "no_image.png" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="offset-sm-1 col-sm-10 offset-md-2 col-md-8">
      <div class="card">
        <div class="card-body">
          <h6 class="card-title">【氏名】</h6>
          <p class="card-text"><%= "#{@user.full_name} (#{@user.kana_full_name})" %></p>
          <h6 class="card-title">【住所】</h6>
          <p class="card-text"><%= "#{@user.postal_code} #{@user.address}" %></p>
          <h6 class="card-title">【電話番号】</h6>
          <p class="card-text"><%= @user.phone_number %></p>
          <h6 class="card-title">【メールアドレス】</h6>
          <p class="card-text"><%= @user.email %></p>
          <h6 class="card-title">【自己紹介文】</h6>
          <p class="card-text"><%= @user.introduction %></p>
          <%= link_to '編集する', edit_user_path(@user), class: "btn btn-info" %>
          <%= link_to 'パスワードを変更する', edit_user_registration_path(@user), class: "btn btn-outline-info" %>
        </div>
      </div>
    </div>
  </div>
</div>