<div class="row">
  <div class="col-sm-12">
    <h3>会員登録情報</h3>
  </div>

  <div class="col-sm-4">
    <%= attachment_image_tag @user, :profile_image, class: "col-sm-12", fallback: "no_image.png" %>
    <%# 円グラフ表示 %>
    <%= pie_chart @genredata %>
  </div>
  <div class="col-sm-8">
    <table class='table'>
      <tr>
        <th>氏名</th>
        <td><%= @user.full_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @user.kana_full_name %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @user.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @user.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @user.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>
    <%= link_to '編集する', edit_user_path(@user), class:"data-disable-with", class:"btn btn-default col-sm-6" %>
    <%= link_to 'パスワードを変更する', edit_user_registration_path(@user), class:"data-disable-with", class:"btn btn-default col-sm-6" %>
  </div>
</div>