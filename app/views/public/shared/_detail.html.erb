<div class="aticle-image-top">
  <%= attachment_image_tag article, :image, class: "img-fluid", fallback: "no_image.png" %>
</div>

<div class="article-info">
  <span class="badge badge-info">ジャンル</span><%= article.genre.genre_name %>
  <span class="badge badge-info">投稿者</span><%= article.company.company_name %>
  <span class="badge badge-info">投稿日</span><%= article.created_at.strftime('%Y/%m/%d') %>
</div>

<div class="article-favorite">
  <span>お気に入り
    <% if user_signed_in? %>
      <% if article.favorited_by?(current_user) %>
        <%= link_to article_favorites_path(article.id), method: :delete, remote: true do %>
          <i class="fas fa-heart" style="color: #e82a2a;"><%= article.favorites.count %></i>
        <% end %>
      <% else %>
        <%= link_to article_favorites_path(article.id), method: :post, remote: true do %>
          <i class="far fa-heart" style="color: #e82a2a;"><%= article.favorites.count %></i>
        <% end %>
      <% end %>
    <% else %>
      <i class="fas fa-heart" style="color: #e82a2a;"><%= article.favorites.count %></i>
    <% end %>
  </span>
</div>

<div class="article-title">
  <h6 class="card-title text-center"><%= article.title %></h6>
</div>