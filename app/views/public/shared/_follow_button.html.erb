<% if user_signed_in? %>
  <% if current_user != company %>
    <% if company.followed_by?(current_user) %>
      <%= link_to "フォロー済み", user_relationships_path(company.id), method: :delete, class: "btn btn-info btn-sm", style: "font-size: x-small;", remote: true %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(company.id), method: :post, class: "btn btn-outline-info btn-sm", style: "font-size: x-small;", remote: true %>
    <% end %>
  <% end %>
<% end %>