<% if user_signed_in? %>
  <% if current_user != company %>
    <% if company.followed_by?(current_user) %>
      <%= link_to "フォロー済み", user_relationships_path(company.id), method: :delete, class:"btn btn-primary btn-sm", remote: true %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(company.id), method: :post, class:"btn btn-default btn-sm", remote: true %>
    <% end %>
  <% end %>
<% end %>