<div class="row company-name">
  <div class="col-md-12">
    <h4 class="text-center"><%= @room.company.company_name %></h4>
    <%= link_to company_path(@room.company_id) do %>
      <i class="fas fa-angle-left"> 企業詳細</i>
    <% end %>
    <%= link_to rooms_path do %>
      <i class="fas fa-envelope">DM一覧</i>
    <% end %>
  </div>
</div>

<hr class="titleHr">
<div class="row">
  <div class="offset-md-1 col-md-10 offset-md-1 col-sm-12">
    <% @messages.each do |m| %>
      <% if m.attribute_present?(:user_id) %>

        <div class="user-dm">
          <div class="self-face">
            <%= attachment_image_tag m.user, :profile_image, class: "img-fluid rounded-circle", fallback: "no_image.png" %>
          </div>
          <div class="self-hukidashi card offset-md-4 col-md-6 offset-sm-2 col-sm-6">
            <div class="card-body message">
              <p class="text-right">
                <strong><%= m.message %></strong><br>
                <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
              </p>
            </div>
          </div>
        </div>
      <% elsif m.attribute_present?(:company_id) %>

        <div class="company-dm">
          <div class="opponent-face">
            <%= attachment_image_tag m.company, :profile_image, class: "img-fluid rounded-circle", fallback: "no_image.png" %>
          </div>
          <div class="opponent-hukidashi card col-md-6 col-sm-6">
            <div class="card-body message">
              <p class="text-left">
                <strong><%= m.message %></strong><br>
                <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
              </p>
            </div>
          </div>
        </div>

      <% end %>
    <% end %>
  </div>
  <div class="offset-md-1 col-md-10 offset-md-1">
    <%= form_for @message do |f| %>
      <div class="form-group">
        <%= f.text_area :message, autofocus: true, autocomplete: "message", placeholder: "メッセージを入力して下さい", class: "form-control", style: "height: 100px;" %>
      </div>
      <%= f.hidden_field :room_id, value: @room.id %>
      <p class="text-right"><%= f.submit "送信", class: "btn btn-info" %></p>
    <% end %>
  </div>
</div>