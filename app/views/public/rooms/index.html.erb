<div class="row">
  <div class="col-md-12">
    <h4 class="text-center">DM一覧</h4>
  </div>
</div>

<hr class="titleHr">
<div class="row">
  <div class="col-sm-12 offset-md-1 col-md-10">
    <table class='table table-borderless'>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= attachment_image_tag room.company, :profile_image, class: "img-fluid notification-face", fallback: "no_image.png" %></td>
            <td><%= room.company.company_name %></td>
            <td>
              <p style="font-size: small"><%= strip_tags(most_new_message(room)).truncate(45) %></p>
            </td>
            <td>
              <%= link_to room_path(room.id) do %>
                <span class="badge badge-info"><i class="fas fa-envelope"></i>メッセージを見る</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>