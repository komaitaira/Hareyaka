<div class="list clearfix">
  <% notifications.each do |notification| %>
  <%= attachment_image_tag notification.company, :profile_image, size:'30x30', fallback: "no_image.png" %>
  <p>
    <%= notification.company.company_name %>さんからの<%= link_to 'メッセージ', room_path(notification.room_id) %>があります<span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)}前)" %></span>
  </p>
  <% end %>
</div>