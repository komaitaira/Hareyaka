<table class='table table-borderless'>
  <tbody>
    <% notifications.each do |notification| %>
      <tr>
        <td><%= image_tag "https://hareyaka-image-resize-bucket.s3-ap-northeast-1.amazonaws.com/store/" + notification.company.profile_image_id + "-thumbnail.", class: "img-fluid notification-face", fallback: "no_image.png" %></td>
        <td>
          <%= notification.sender_name %>からの<%= link_to 'メッセージ', room_path(notification.room_id) %>があります
          <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>