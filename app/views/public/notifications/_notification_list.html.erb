<% notifications.each do |notification| %>
  <div class="notification-list">
    <div class="notification-face">
      <%= attachment_image_tag notification.company, :profile_image, class: "img-fluid rounded-circle", fallback: "no_image.png" %>
    </div>
    <p class="notification-message">
      <%= notification.sender_name %>さんからの<%= link_to 'メッセージ', room_path(notification.room_id) %>があります
      <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
    </p>
  </div>
<% end %>
