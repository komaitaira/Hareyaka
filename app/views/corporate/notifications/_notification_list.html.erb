<table class='table table-borderless'>
  <tbody>
    <% notifications.each do |notification| %>
      <tr>
        <td>
          <% if Rails.env.production? %>
            <%# 本番環境での表示 %>
            <%= image_tag "https://hareyaka-image-resize-bucket.s3-ap-northeast-1.amazonaws.com/store/" + notification.user.profile_image_id + "-thumbnail.", class: "img-fluid notification-face", fallback: "no_image.png" %>
          <% else %>
            <%# 開発環境での表示 %>
            <%= attachment_image_tag notification.user, :profile_image, class: "img-fluid notification-face", fallback: "no_image.png" %>
          <% end %>
        </td>
        <td>
          <%= notification.sender_name %>さんからの<%= link_to 'メッセージ', corporate_room_path(notification.room_id) %>があります
          <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>