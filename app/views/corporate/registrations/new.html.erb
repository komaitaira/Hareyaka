<div class="row">
  <div class="offset-sm-2 col-sm-8 offset-sm-2">
    <h3>新規法人会員登録</h3>
    <h6 style="color: grey;">※個人会員の方はヘッダーの新規登録からお進みください</h6>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "corporate/shared/error_messages", resource: resource %>

        <div class="form-group">
          <span class="badge badge-danger">必須</span><%= f.label :企業名  %>
          <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name", class: "form-control" %>
        </div>

        <div class="form-group">
          <span class="badge badge-danger">必須</span><%= f.label :フリガナ  %>
          <%= f.text_field :kana_company_name, autofocus: true, autocomplete: "kana_company_name", class: "form-control" %>
        </div>

        <div class="form-group">
          <span class="badge badge-danger">必須</span><%= f.label :メールアドレス  %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <span class="badge badge-danger">必須</span><%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
        </div>

        <div class="form-group">
          <span class="badge badge-danger">必須</span><%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control", collection: JpPrefecture::Prefecture.all, :value_method => :name %>
        </div>

        <div class="form-group">
          <span class="badge badge-danger">必須</span><%= f.label :電話番号（ハイフンなし）%>
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %>
        </div>

        <div class="form-group">
          <span class="badge badge-danger">必須</span><%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <span class="badge badge-danger">必須</span><%= f.label :パスワード（確認用）%>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions">
          <p><%= f.submit "新規登録", class: "btn btn-info col-sm-12" %></p>
        </div>

        <h5>既に登録済みの法人様</h5>
        <p><%= render "corporate/shared/links" %>からログインしてください</p>

    <% end %>
  </div>
</div>