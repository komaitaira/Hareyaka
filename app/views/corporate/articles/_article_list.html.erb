<table class='table'>
  <thead>
    <tr>
      <th>投稿日時</th>
      <th>記事タイトル</th>
      <th>ジャンル</th>
      <th>掲載ステータス</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% articles.each do |article| %>
      <tr>
        <td><%= article.created_at.strftime('%Y/%m/%d/  %H:%M') %></td>
        <td><%= link_to article.title, corporate_article_path(article.id) %></td>
        <td><%= article.genre.genre_name %></td>
        <td><%= article.is_active == true ? "掲載中" : "掲載停止中" %></td>
        <td>
          <%= link_to corporate_article_path(article.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
