<%= search_form_for [:admin, search] do |f| %>
  <div class="user_search_form">
    <h3>会員検索</h3>
    <h4><%= link_to "全会員を表示", admin_users_path %></h4>
      <div class="form-group row">
        <div class="col-xs-12">
          <%= f.label :last_name_cont, :氏名で検索 %><br>
          <%= f.search_field :last_name_cont, placeholder: "例)青山", autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-12">
          <%= f.label :email_cont, :メールアドレスで検索 %><br>
          <%= f.search_field :email_cont, placeholder: "例)aoyama@email.com", autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-12">
          <%= f.label :is_active_eq, :会員ステータスで検索 %><br>
          <%= f.select :is_active_eq, [["有効", true], ["退会済み", false]], include_blank: "--選択してください--", autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="item_search_btns">
        <%= f.submit "検索", class:"btn btn-info" %>
      </div>
  </div>
<% end %>