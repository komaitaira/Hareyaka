<table class='table'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>会員ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.full_name, admin_user_path(user.id) %></td>
        <td><%= user.email %></td>
        <td><%= user.is_active == true ? "有効" : "退会済み" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
