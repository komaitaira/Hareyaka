<div class="row-xs-12">
  <h3><%= @company.company_name %> の会員情報編集</h3>
</div>

<div class="row">
  <%= form_for(@company, url: admin_company_path) do |f| %>
    <div class="col-xs-12">
      
      <div class="form-group row">
        <div class="col-xs-6">
          <%= f.label :プロフィール画像 %>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="col-xs-6">
          <%= f.label :会員ステータス %><br>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "有効", {value: :is_active, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "退会済み", {value: :is_active, style: "display: inline-block;"} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :企業名  %>
        <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :フリガナ  %>
        <%= f.text_field :kana_company_name, autofocus: true, autocomplete: "kana_company_name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス  %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号（ハイフンなし） %>
        <%= f.text_field :postal_code, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :電話番号（ハイフンなし）%>
        <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit '変更を保存する',　class: "data-disable-with", class: "btn btn-success col-xs-6" %>
      </div>

      <%= link_to '会員情報詳細へ戻る', admin_company_path(@company), class:"data-disable-with", class:"btn btn-default col-xs-6" %>

    </div>
  <% end %>
</div>
