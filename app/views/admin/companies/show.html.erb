<div class="row-xs-12">
  <h3><%= @company.company_name %> の企業情報詳細</h3>
</div>

<div class="row-xs-12">
  <table class='table col-xs-12'>
    <tr>
      <th>プロフィール画像</th>
      <td><%= attachment_image_tag @company, :profile_image, size: '400x200', fallback: "no_image.png" %></td>
    </tr>
    <tr>
      <th>企業ID</th>
      <th><%= @company.id %> <%= @company.is_active == true ? "有効" : "退会済み" %></th>
    <tr>
    <tr>
      <th>企業名</th>
      <td><%= @company.company_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @company.kana_company_name %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @company.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @company.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @company.phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @company.email %></td>
    </tr>
  </table>
  <%= link_to '編集する', edit_admin_company_path(@company), class: "data-disable-with", class:"btn btn-default col-xs-6" %>
  <%= link_to '企業一覧へ戻る', admin_companies_path, class: "data-disable-with", class:"btn btn-default col-xs-6" %>
</div>